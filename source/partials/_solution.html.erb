<div class="full-height-page background-color-strong" id="title_solution">
  <div class="container">

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="solution uppercasing">
          <h1><%= t "solution.projectstarts1"%></br><%= t "solution.projectstarts2"%></h1>

          <div>
            <p><%= t "solution.projectstops"%></p>

            <p><%= t "solution.discuss1"%><span class="highlight-color-strong"><%= t "solution.discuss2"%></span></p>

            <p><%= t "solution.accompany1"%><span class="highlight-color-strong"><%= t "solution.accompany2"%></span></p>
          </div>

          <h2 class="text-center"><%= t "solution.meet"%></h2>





          <p class="text-center"><a class="btn btn-info bold btn-solution" data-toggle="modal" data-target="#myModal" role="button"><%= t "solution.appointment1"%></br><%= t "solution.appointment2" %></a></p>
        </div>
      </div>
    </div>
    <div class="flexbox">
      <div class="picto-center"></div>
      <i class="fa fa-angle-down fa-3x text-center navbar_btn_process" aria-hidden="true"></i>
      <div class="picto-center"></div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"><%= t "solution.modal.title"%></h4>
      </div>
      <div class="modal-body">

        <form action="https://www.enformed.io/9nwccqfj" method="POST" id="contact_form"  >

          <div class="form-group">
            <input type="text" id="name" name="Name" placeholder="<%= t "solution.modal.placeholdername"%>" class="form-control"/>
          </div>

          <div class="form-group">
            <p><%= t "solution.modal.bestcontact"%></p>
            <input type="text" id="phone" name="Phone" placeholder="<%= t "solution.modal.phonenumber"%>" class="form-control"/>
          </div>

          <div class="form-group">
            <input type="email" name="Email" class="form-control" aria-describedby="emailHelp" placeholder="<%= t "solution.modal.placeholderemail"%>">
                <small id="emailHelp" class="form-text text-muted"><%= t "solution.modal.placeholderemail"%></small>
          </div>

          <div class="form-group">
            <p><%= t "solution.modal.yourproject"%></p>
            <textarea id="msg" name="Project" placeholder="<%= t "solution.modal.placeholderyourproject"%>" class="form-control" rows="3"></textarea>
          </div>

          <p><%= t "solution.modal.blabla1"%></p>
          <p><%= t "solution.modal.blabla2"%></p>
      </div>
        </form>



      <div class="modal-footer">
        <button type="submit" class="btn btn-primary btn_submit"><%= t "solution.modal.btnsend"%></button>
      </div>
    </div>
  </div>
</div>


